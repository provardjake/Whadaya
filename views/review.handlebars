
<div class="row mt-4">
  <div class="col-md-10 border border-secondary p-4 rounded bg-light">
    <h3>Create a New Review:</h3>

    <form class="form new-review-form">
      <div class="form-group">
        <label for="review-category">Category:</label>
    <select class="p-2" name="review-category" id="review-category"> 
        <option value=1>Movies</option> 
        <option value=2>Music</option> 
        <option value=3>TV Show</option> 
        <option value=4>Books</option> 
    </select>
      </div>
      <div class="form-group">
        <label for="review-title">Title:</label>
        <input class="form-input" type="text" id="review-title" name="review-title" />
      </div>
      <div class="form-group">
        <label for="review-message">Review:</label>
        <textarea class="form-input" id="review-message" name="review-message"></textarea>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-dark">Create</button>
      </div>
    </form>
  </div>

  {{#if review.length}}
  <div class="col-md-6 review-list">
    <h3>Recent Reviews:</h3>

   {{#each review as |review| }}
<div class="row mb-4 review">
  <div class="col-md-10 border border-secondary p-4 rounded bg-light">
    <h5>{{review.category.name}}</h5>
    <h2>
      
      <a href="/review/{{review.id}}">{{review.title}}</a>
    </h2>
  
    <p class="username text-uppercase" style="margin-bottom: 0px;">@{{user.username}}</p>
    <p class="date-small">{{review.createdAt}}</p>
    <p class="serif">
      {{review.message}}
    </p>

     <button type="button" class="btn btn-outline-danger"id="like-button">{{review.likes}} â™¡</button>
  <button type="button" class="btn btn-outline-dark"id="comment-button"><a href="/review/{{review.id}}">Comment</a></button>
     
  </div>
  
</div>
{{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/review.js"></script>